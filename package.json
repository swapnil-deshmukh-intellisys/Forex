{
  "name": "forex-platform",
  "version": "1.0.0",
  "description": "Forex trading platform with frontend and backend",
  "private": true,
  "scripts": {
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd RiteshFrontend && pnpm test --run",
    "test:backend": "cd ShraddhaBackend && pnpm test",
    "test:watch": "npm run test:watch:frontend",
    "test:watch:frontend": "cd RiteshFrontend && pnpm test:watch",
    "test:watch:backend": "cd ShraddhaBackend && pnpm test:watch",
    "test:coverage": "npm run test:coverage:frontend && npm run test:coverage:backend",
    "test:coverage:frontend": "cd RiteshFrontend && pnpm test:coverage",
    "test:coverage:backend": "cd ShraddhaBackend && pnpm test",
    "install:all": "cd RiteshFrontend && pnpm install && cd ../ShraddhaBackend && pnpm install"
  },
  "keywords": [
    "forex",
    "trading",
    "testing",
    "vitest",
    "jest",
    "react",
    "nodejs",
    "express"
  ],
  "devDependencies": {
    "vitest": "^2.1.8",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}