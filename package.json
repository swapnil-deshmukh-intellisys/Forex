{
  "name": "forex-platform",
  "version": "1.0.0",
  "description": "Forex trading platform with frontend and backend",
  "private": true,
  "scripts": {
    "test": "npx --yes vitest --run && npx --yes jest --coverage",
    "test:frontend": "cd RiteshFrontend && npx vitest --run",
    "test:backend": "cd ShraddhaBackend && npx jest --coverage",
    "test:watch": "npx --yes vitest --watch && npx --yes jest --watch",
    "test:watch:frontend": "cd RiteshFrontend && npx vitest --watch",
    "test:watch:backend": "cd ShraddhaBackend && npx jest --watch",
    "test:coverage": "npx --yes vitest --coverage && npx --yes jest --coverage",
    "test:coverage:frontend": "cd RiteshFrontend && npx vitest --coverage",
    "test:coverage:backend": "cd ShraddhaBackend && npx jest --coverage",
    "lint": "cd RiteshFrontend && npx eslint .",
    "install:all": "cd RiteshFrontend && npx npm install && cd ../ShraddhaBackend && npx npm install"
  },
  "keywords": [
    "forex",
    "trading",
    "testing",
    "vitest",
    "jest",
    "react",
    "nodejs",
    "express"
  ],
  "devDependencies": {
    "vitest": "^2.1.8",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@8.19.2"
}